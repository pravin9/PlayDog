<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/breed_dog_images"
        android:layout_width="230dp"
        android:layout_height="227dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="234dp"
        android:layout_marginLeft="234dp"
        android:layout_marginTop="3dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/dog_breed_images_desc"
        android:scaleType="centerInside"/>

    <TextView
        android:id="@+id/text_right_breed"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="38dp"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="@string/submit_label"
        android:background="@drawable/mybutton"/>

    <TextView
        android:id="@+id/answer_text"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_above="@+id/submit"
        android:layout_marginBottom="1dp"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/breed_names_list"
        android:layout_width="164dp"
        android:layout_height="34dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginBottom="95dp" />

    <!--    <TextView-->
<!--        android:id="@+id/answer"-->
<!--        android:layout_width="0dp"-->
<!--        android:layout_height="54dp"-->
<!--        android:layout_weight="1"-->
<!--        android:text="@string/answer"/>-->
</RelativeLayout>
